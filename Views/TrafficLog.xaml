        </materialDesign:Card>
        <!--#endregion-->
        
        <!--#region-Row 2  (Top of Divider)-->

        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical">

            <Grid Height="200">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
